<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchLayoutContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible"
    tools:visibility="visible">

    <View
        android:id="@+id/tintView"
        style="@style/Widget.MaterialSearchView.TintView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <LinearLayout
        android:id="@+id/searchContainer"
        style="@style/Widget.MaterialSearchView.SearchTopContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/searchBarContainer"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageButton
                android:id="@+id/backIconButton"
                style="@style/Widget.MaterialSearchView.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_action_back"/>

            <EditText
                android:id="@+id/searchTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/spacing_searchTextView"
                android:layout_marginRight="@dimen/spacing_searchTextView"
                android:background="@null"
                android:hint="@string/search"
                android:imeOptions="actionSearch"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:textColor="@color/searchTextColor"
                android:textColorHint="@color/searchTextColorHint"
                android:textSize="@dimen/font_size_large" />

            <ImageButton
                android:id="@+id/voiceIconButton"
                style="@style/Widget.MaterialSearchView.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_action_voice" />

            <ImageButton
                android:id="@+id/clearIconButton"
                style="@style/Widget.MaterialSearchView.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_action_close"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_alignParentBottom="true"
                android:background="#10000000" />
        </RelativeLayout>

        <ListView
            style="@style/Widget.MaterialSearchView.SuggestionList"
            android:id="@+id/suggestionList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"/>
    </LinearLayout>

</FrameLayout>